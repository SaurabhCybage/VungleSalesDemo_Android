<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/green_gaming_ua"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGamingUA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/gaming_ua"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/textViewGamingUASubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/imageViewGamingUA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/gamingua" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/text_white"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewBrandUA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/brand_ua"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_text_size" />
            <TextView
                android:id="@+id/textViewBrandUASubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/brandua" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/green_gaming_ua"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCreativeLabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/gaming_ua"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/textViewCreativeLabsSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/imageViewCreativeLabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/gamingua" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>